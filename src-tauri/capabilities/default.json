{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "opener:default",
    "store:default",
    "fs:default",
    { "identifier": "fs:scope", "allow": [ { "path": "$HOME/**" } ] },
    { "identifier": "fs:allow-write-file", "allow": [ { "path": "$HOME/**" } ] }
  ]
}
