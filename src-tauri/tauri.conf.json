{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kano PDF Tool",
  "version": "3.3.0",
  "identifier": "com.yufeng.kano-pdf-tool",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Kano PDF Tool",
        "width": 800,
        "height": 600,
        "minWidth": 900,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": [
          "$APP/**",
          "$RESOURCE/**",
          "$HOME/**",
          "$PICTURE/**",
          "$VIDEO/**",
          "$DOCUMENT/**",
          "$DOWNLOAD/**",
          "$TEMP/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/pdfium/*/*"
    ],
    "macOS": {
      "entitlements": "macos/entitlements.plist"
    },
    "fileAssociations": [
      {
        "ext": ["pdf"],
        "name": "PDF Document",
        "role": "Viewer",
        "description": "PDF file"
      },
      {
        "ext": ["png", "jpg", "jpeg", "gif", "bmp", "webp", "tiff", "tif", "svg"],
        "name": "Image File",
        "role": "Viewer",
        "description": "Image file"
      }
    ]
  }
}
